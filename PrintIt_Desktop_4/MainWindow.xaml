<controls:MetroWindow x:Class="PrintIt_Desktop_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow" Height="350" Width="525"
        BorderThickness="0"
        GlowBrush="DarkGray"
        ShowMaxRestoreButton="False"
        TitleForeground="Black"
        WindowCloseButtonStyle="{DynamicResource CleanCloseWindowButtonStyle}"
        WindowMinButtonStyle="{DynamicResource CleanMinMaxWindowButtonStyle}"
        ShowTitleBar="True"
        Background="Black">
    <Grid MouseDown="UIElement_OnMouseDown">
        <Label></Label>
    </Grid>
</controls:MetroWindow>
