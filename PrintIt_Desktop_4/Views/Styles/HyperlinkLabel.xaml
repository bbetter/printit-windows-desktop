<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HyperlinkStyleLabel" TargetType="{x:Type Label}" >
        <Setter Property="FontStyle" Value="Normal"></Setter>
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="FontStyle" Value="Oblique" />
            </Trigger>

        </Style.Triggers>
    </Style>

    <Style x:Key="HyperlinkStyleTextBlock" TargetType="{x:Type TextBlock}" >
        <Setter Property="TextDecorations" Value=""></Setter>
        <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}"></Setter>
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="TextDecorations" Value="Underline"></Setter>
                <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush4}"></Setter>
            </Trigger>

        </Style.Triggers>
    </Style>
</ResourceDictionary>